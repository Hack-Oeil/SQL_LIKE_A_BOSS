{% extends 'layout.html.twig' %}

{% block body %}
<section class="section-padding blog-section">
    <div class="container">
        <div class="text-center">
          {% if error is defined %}
          <div class="container d-flex align-items-center justify-content-center alert alert-danger">{{error}}</div>
          {% endif %}
          <span>Vous pouvez vous connecter avec les identifiants : <strong>guest / guest</strong></span>
            <div class="container d-flex align-items-center justify-content-center">
                <form class="p-4 p-md-5 border rounded-3 bg-light" action="" method="post">
                    <h2 class="mb-4">Connexion</h2>
                    <div class="form-floating mb-3">
                      <input type="text" class="form-control" id="username" name="username" placeholder="Nom d'utilisateur" required>
                      <label for="username">Nom d'utilisateur</label>
                    </div>
                    <div class="form-floating mb-3">
                      <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" required>
                      <label for="password">Mot de passe</label>
                    </div>
                    <div class="form-check mb-3">
                      <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                      <label class="form-check-label" for="rememberMe">Se souvenir de moi (en vrai je m'en souviendrais pas)</label>
                    </div>
                    <button class="w-100 btn btn-lg btn-primary" type="submit">Se connecter</button>
                    <hr class="my-4">
                    <div class="text-center">
                      <a href="/forgot_password">Mot de passe oubli√© ?</a>
                    </div>
                  </form>
            </div>
        </div>
    </div>
</section>  
{% endblock %}